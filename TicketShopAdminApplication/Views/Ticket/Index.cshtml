@model List<TicketShopAdminApplication.Models.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">


    <div class="row m-4">
        
            <form asp-action="Index">
                <h6>Filter by Genre:</h6>

                <div class="form-group">
                    <label for="genre" class="control-label"></label>
                    <input type="text" name="genre" id="genre" class="form-control" />
                    <span id="genre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Filter" class="btn btn-primary" />
                </div>
            </form>

        </div>


    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Movie Name</th>
                    <th scope="col">Movie Description</th>
                    <th scope="col">Ticket Price</th>
                    <th scope="col">Movie Rating</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Date&Time</th>

                    
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No Tickets </td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.MovieName</td>
                            <td>@item.MovieDescription</td>
                            <td>$@item.TicketPrice</td>
                            <td>@item.MovieRating</td>
                            <td>@item.Genre</td>
                            <td>@item.ValidFor</td>


       
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>

    <div class="row m-4">

        <form asp-action="ExportTickets">
            <h6>Export By Genre (Or leave blank to export all tickets) :</h6>

            <div class="form-group">
                <label for="genre" class="control-label"></label>
                <input type="text" name="genre" id="genre" class="form-control" />
                <span id="genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Export" class="btn btn-success" />
            </div>
        </form>

    </div>


</div>